{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "../dist",
    "target": "es5",
    "module": "es2015",
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./../src",
    "./../node_modules/path-framework"
  ],
  "exclude": [
    "./../node_modules/path-framework/tests",
    "test.ts",
    "**/*.spec.ts"
  ]
}
